rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helpers
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Ajuste se quiser incluir mais admins
      return request.auth.token.email == "patrick@retornoseguros.com.br";
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // ======================
    // CLIENTES
    // ======================
    match /clientes/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow create: if signedIn() && request.auth.uid == uid;
      allow update: if isOwner(uid) || isAdmin();
      allow delete: if isAdmin();
    }

    // ======================
    // APÓLICES
    // ======================
    match /apolices/{id} {
      allow read: if signedIn() && request.auth.uid == resource.data.clienteId || isAdmin();
      allow create: if signedIn() && request.auth.uid == request.resource.data.clienteId || isAdmin();
      allow update, delete: if isAdmin();
    }

    // ======================
    // INDICAÇÕES
    // ======================
    match /indicacoes/{id} {
      allow read: if signedIn();
      // O indicado pode criar o doc da indicação (no cadastro)
      allow create: if signedIn() && request.resource.data.indicadoId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // ======================
    // CARTEIRA DO CLIENTE
    // ======================
    match /carteira_cliente/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      // Somente admin (ou Cloud Function) pode atualizar saldo
      allow create, update, delete: if isAdmin();
    }
  }
}
